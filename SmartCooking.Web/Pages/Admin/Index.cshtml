@page
@model SmartCooking.Web.Pages.Admin.IndexModel
@{
	Layout = "~/Theme/SBAdmin/Main.cshtml";
	ViewData["PageTitle"] = "Dashboard";
	ViewData["Breadcrumb"] = "Dashboard";
}

<div class="row">
	<div class="col-xl-3 col-sm-6 mb-3">

		<div class="card text-white bg-primary o-hidden h-100">
			<div class="card-body">
				<div class="card-body-icon">
					<i class="fas fa-fw fa-comments"></i>
				</div>
				<div class="mr-5"><span id="lenders_counter">@Model.RecipeCount</span> Συνταγές</div>
			</div>
			<a class="card-footer text-white clearfix small z-1" href="@Url.Content("~/Admin/RecipeList")">
				<span class="float-left">Περισσότερα</span>
				<span class="float-right">
					<i class="fas fa-angle-right"></i>
				</span>
			</a>
		</div>
	</div>
	<div class="col-xl-3 col-sm-6 mb-3">

		<div class="card text-white bg-warning o-hidden h-100">
			<div class="card-body">
				<div class="card-body-icon">
					<i class="fas fa-fw fa-comments"></i>
				</div>
				<div class="mr-5"><span id="lenders_counter">@Model.ItemCategoryCount</span> Κατηγοριές Ειδών</div>
			</div>
			<a class="card-footer text-white clearfix small z-1" href="@Url.Content("~/Admin/ItemCategoryList")">
				<span class="float-left">Περισσότερα</span>
				<span class="float-right">
					<i class="fas fa-angle-right"></i>
				</span>
			</a>
		</div>
	</div>

	<div class="col-xl-3 col-sm-6 mb-3">

		<div class="card text-white bg-success o-hidden h-100">
			<div class="card-body">
				<div class="card-body-icon">
					<i class="fas fa-fw fa-comments"></i>
				</div>
				<div class="mr-5"><span id="lenders_counter">@Model.ItemCount</span> Είδη Αποθήκης</div>
			</div>
			<a class="card-footer text-white clearfix small z-1" href="@Url.Content("~/Admin/ItemList")">
				<span class="float-left">Περισσότερα</span>
				<span class="float-right">
					<i class="fas fa-angle-right"></i>
				</span>
			</a>
		</div>
	</div>
	<div class="col-xl-3 col-sm-6 mb-3">

		<div class="card text-white bg-danger o-hidden h-100">
			<div class="card-body">
				<div class="card-body-icon">
					<i class="fas fa-fw fa-comments"></i>
				</div>
				<div class="mr-5"><span id="lenders_counter">@Model.UnitCount</span> Μονάδες Μέτρησης</div>
			</div>
			<a class="card-footer text-white clearfix small z-1" href="@Url.Content("~/Admin/UnitList")">
				<span class="float-left">Περισσότερα</span>
				<span class="float-right">
					<i class="fas fa-angle-right"></i>
				</span>
			</a>
		</div>
	</div>
</div>